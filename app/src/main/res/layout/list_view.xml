<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/style_cardname"
    android:paddingTop="10dp"
    android:paddingBottom="5dp">


    <TextView
        android:id="@+id/cardName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="25dp"
        android:layout_alignParentLeft="true"
        android:textColor="@android:color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:id="@+id/batterySkiLvl"
        android:layout_width="42dp"
        android:layout_height="21dp"
        android:scaleType="fitXY"
        android:src="@drawable/battery0"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"/>
    />

    <TextView
        android:id="@+id/chipId"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/cardName"
        android:textSize="11dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/white"/>

    <ImageButton
        android:id="@+id/renameButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/ic_rename_box_white_48dp"
        android:layout_below="@+id/chipId"
        android:layout_alignParentLeft="true"
        />

        <ImageButton
            android:id="@+id/localiseButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_map_marker_white_48dp"
            android:layout_below="@+id/chipId"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:background="@drawable/style_button"
            />

        <ImageButton
            android:padding="3dp"
            android:layout_marginTop="5dp"
            android:id="@+id/deleteButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_delete_white_48dp"
            android:layout_below="@+id/chipId"
            android:layout_alignParentRight="true"
            android:background="@drawable/style_button"
            android:layout_marginRight="10dp"
            />



</RelativeLayout>