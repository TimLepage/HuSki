<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/cardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="25dp"
            android:layout_alignParentLeft="true"
            android:textColor="#00123e"
            android:layout_margin="5dp"
            android:layout_centerVertical="true"
            />

    <TextView
        android:id="@+id/cheapId"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/cardName"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="11dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimary"/>

    <ImageView
        android:id="@+id/batterySkiLvl"
        android:layout_width="42dp"
        android:layout_height="21dp"
        android:scaleType="fitXY"
        android:src="@drawable/battery0"
        android:layout_marginTop="25dp"
        android:layout_toLeftOf="@id/deleteButton"/>
    />

    <ImageButton
        android:id="@+id/deleteButton"
        android:layout_centerVertical="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/trash"
        android:layout_toLeftOf="@id/localiseButton"/>

    <ImageButton
        android:id="@+id/localiseButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/localise"
        android:layout_alignParentRight="true"/>

    <View android:background="@color/colorPrimary"
        android:layout_width = "match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>